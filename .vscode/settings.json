{
    // Format and fix Python files with Ruff on save
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "python.formatting.provider": "none",
    "ruff.enable": true,
    "ruff.formatOnSave": true
}
